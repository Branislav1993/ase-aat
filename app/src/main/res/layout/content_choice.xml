<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="de.tum.aat.activity.ChoiceActivity"
    tools:showIn="@layout/activity_choice">

    <!--<ImageButton-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1"-->
        <!--android:src="@mipmap/ic_presence" />-->

    <TextView
        android:id="@+id/bonus_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff00"
        android:textSize="16sp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/presence_qr_button"
        style="?android:textAppearanceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/attendance"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/presentation_qr_button"
        style="?android:textAppearanceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/presentation"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/exercise_groups_button"
        style="?android:textAppearanceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/exercise_groups"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/user_profile_button"
        style="?android:textAppearanceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/user_profile"
        android:textSize="20sp"
        android:textStyle="bold" />


</LinearLayout>
